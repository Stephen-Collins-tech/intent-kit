+        return llm_splitter(user_input, debug, llm_client)
+
+    return create_splitter_node(
+        name=name,
+        description=description,
+        splitter_func=llm_splitter_wrapper,
+        children=children,
+        llm_client=llm_config.get("llm_client"),
