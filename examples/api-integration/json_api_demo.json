{
  "root": "llm_classifier_node",
  "nodes": {
    "llm_classifier_node": {
      "id": "llm_classifier_node",
      "type": "llm_classifier",
      "name": "llm_classifier_node",
      "description": "LLM-powered intent classifier (Gemma via OpenRouter)",
      "llm_config": {
        "provider": "openrouter",
        "model": "google/gemma-3-27b-it",
        "api_key": "${OPENROUTER_API_KEY}"
      },
      "children": [
        "greet_action",
        "calculate_action",
        "weather_action",
        "help_action"
      ]
    },
    "greet_action": {
      "id": "greet_action",
      "type": "action",
      "name": "greet_action",
      "description": "Greet the user",
      "function": "greet_user",
      "param_schema": {"name": "str"},
      "llm_config": {
        "provider": "openrouter",
        "model": "google/gemma-3-27b-it",
        "api_key": "${OPENROUTER_API_KEY}"
      },
      "context_inputs": [],
      "context_outputs": []
    },
    "calculate_action": {
      "id": "calculate_action",
      "type": "action",
      "name": "calculate_action",
      "description": "Perform calculations",
      "function": "calculate",
      "param_schema": {"operation": "str", "a": "float", "b": "float"},
      "llm_config": {
        "provider": "openrouter",
        "model": "google/gemma-3-27b-it",
        "api_key": "${OPENROUTER_API_KEY}"
      },
      "context_inputs": [],
      "context_outputs": []
    },
    "weather_action": {
      "id": "weather_action",
      "type": "action",
      "name": "weather_action",
      "description": "Get weather information",
      "function": "weather_info",
      "param_schema": {"location": "str"},
      "llm_config": {
        "provider": "openrouter",
        "model": "google/gemma-3-27b-it",
        "api_key": "${OPENROUTER_API_KEY}"
      },
      "context_inputs": [],
      "context_outputs": []
    },
    "help_action": {
      "id": "help_action",
      "type": "action",
      "name": "help_action",
      "description": "Provide help",
      "function": "help_user",
      "param_schema": {},
      "llm_config": {
        "provider": "openrouter",
        "model": "google/gemma-3-27b-it",
        "api_key": "${OPENROUTER_API_KEY}"
      },
      "context_inputs": [],
      "context_outputs": []
    }
  }
}
